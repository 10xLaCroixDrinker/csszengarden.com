SetEnvIfNoCase Referer ".*coret.org$" BadReferrer
order deny,allow
deny from env=BadReferrer

<FilesMatch "^.*submissions\.json$">
  SetHandler php-script
</FilesMatch>

<FilesMatch "^.*index\.html$">
  SetHandler php-script
</FilesMatch>
	

